{
  "expo": {
    "name": "Cooking Chatbot",
    "slug": "cooking-chatbot",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "assets/*",
      "assets/images/*",
      "assets/sounds/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourcompany.cookingbot",
      "buildNumber": "1.0.0",
      "googleServicesFile": "./ios/Cookingbot/GoogleService-Info.plist",
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs access to camera to record cooking videos",
        "NSMicrophoneUsageDescription": "This app needs access to microphone to record cooking videos",
        "NSPhotoLibraryUsageDescription": "This app needs access to photos to save cooking videos"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.yourcompany.cookingbot",
      "versionCode": 1,
      "permissions": [
        "NOTIFICATIONS",
        "CAMERA",
        "RECORD_AUDIO",
        "MODIFY_AUDIO_SETTINGS"
      ],
      "enableDangerousExperimentalLeanBuilds": false
    },
    "web": {
      "favicon": "./assets/images/icon.png"
    },
    "newArchEnabled": true,
    "extra": {
      "eas": {
        "projectId": "2d8d79cd-320c-4f7c-b119-8ed1404f8205"
      }
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./assets/images/icon.png",
          "color": "#6de67b",
          "sounds": ["./assets/sounds/notification.wav"]
        }
      ]
    ]
  }
}
